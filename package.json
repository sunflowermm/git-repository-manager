{
  "name": "git-manager-electron",
  "version": "1.0.9",
  "description": "ğŸŒ» å‘æ—¥è‘µGitä»“åº“ç®¡ç† - Electronç‰ˆ",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder --publish=never",
    "publish": "node publish.js"
  },
  "keywords": [
    "git",
    "repository",
    "manager",
    "electron"
  ],
  "author": "å‘æ—¥è‘µ",
  "license": "MIT",
  "devDependencies": {
    "@octokit/rest": "^20.0.2",
    "electron": "^30.0.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "electron-updater": "^6.1.7",
    "simple-git": "^3.25.0"
  },
  "build": {
    "appId": "com.sunflower.gitmanager",
    "productName": "å‘æ—¥è‘µGitä»“åº“ç®¡ç†",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/.bin/**/*",
      "!node_modules/**/test/**/*",
      "!node_modules/**/tests/**/*",
      "!node_modules/**/*.md",
      "!node_modules/**/*.txt",
      "!node_modules/**/LICENSE*",
      "!node_modules/**/CHANGELOG*",
      "!node_modules/**/README*",
      "!node_modules/**/.git/**/*",
      "!node_modules/**/.github/**/*"
    ],
    "asarUnpack": [
      "node_modules/@kwsites/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "sunflowermm",
      "repo": "git-repository-manager",
      "releaseType": "release",
      "publishAutoUpdate": true
    }
  }
}
